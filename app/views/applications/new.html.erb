<%= form_with url: '/applications', method: :new, local: true do |f| %>
  <h2>Apply For A Pet:</h2>
  <%= f.label :name %>
  <%= f.text_field :name, value: @application.name %><br>
  <%= f.label :street_address %>
  <%= f.text_field :street_address, value: @application.street_address %><br>
  <%= f.label :city %>
  <%= f.text_field :city, value: @application.city %><br>
  <%= f.label :state %>
  <%= f.text_field :state, value: @application.state %><br>
  <%= f.label :zip_code %>
  <%= f.text_field :zip_code, value: @application.zip_code%><br>
  <%= f.submit 'Submit Application' %>
<% end %>
